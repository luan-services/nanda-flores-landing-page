---
import MobileMenu from './MobileMenu.tsx';

const navLinks = [
	{ href: "/", name: "Início" },
	{ href: "/catalog", name: "Catálogo" },
	{ href: "/other-services", name: "Outros Serviços" },
	{ href: "/how-to-reach", name: "Como Chegar" },
];
---

<header class="bg-custom-cream border-b border-custom-pale-yellow shadow-sm sticky top-0 z-50">
	<nav class="container mx-auto px-6 py-4 flex justify-between items-center">
		<a href="/" class="text-2xl font-bold text-custom-charcoal hover:text-custom-slate-gray transition-colors">
			Nanda Flores
		</a>

		<div class="hidden md:flex items-center space-x-6">
			{navLinks.map(link => (
				<a href={link.href} class="text-custom-slate-gray font-medium hover:text-custom-charcoal transition-colors">
					{link.name} 
				</a>
			))}
		</div>

		<MobileMenu navLinks={navLinks} client:load ></MobileMenu>
	</nav>
</header>