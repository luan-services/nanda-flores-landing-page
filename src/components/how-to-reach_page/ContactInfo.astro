---
import { faInstagram, faFacebook, faWhatsapp } from '@fortawesome/free-brands-svg-icons';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { MapPin, Phone, Mail } from 'lucide-react';

const contactDetails = {
    address: "Rua Coronel Carvalho 410, Centro (Antiga loja das Havaianas)",
    phones: ["(24) 3365-4571", "(24) 3364-4734", "(24) 99991-9991"],
    whatsapp: "(24) 98114-7753",
    whatsappLink: "https://wa.me/5524981147753",
    email: "nandaflores@uol.com.br"
};

const socialLinks = [
  { href: "#", name: "Instagram", icon: faInstagram },
  { href: "#", name: "Facebook", icon: faFacebook},
  { href: contactDetails.whatsappLink, name: "WhatsApp", icon: faWhatsapp},
];
---
<div class="flex flex-col gap-6">
    <div class="flex items-start gap-4 text-custom-coral flex-shrink-0">
        <MapPin size={24} />
        <div>
            <h3 class="font-bold text-lg text-custom-charcoal">Endere√ßo</h3>
            <p class="text-custom-slate-gray">{contactDetails.address}</p>
        </div>
    </div>
    <div class="flex items-start gap-4 text-custom-coral flex-shrink-0">
        <Phone size={24} />
        <div>
            <h3 class="font-bold text-lg text-custom-charcoal">Telefones</h3>
            {contactDetails.phones.map(phone => <p class="text-custom-slate-gray">{phone}</p>)}
            <p class="text-custom-slate-gray">WhatsApp: {contactDetails.whatsapp}</p>
        </div>
    </div>
    <div class="flex items-start gap-4 text-custom-coral flex-shrink-0">
        <Mail size={24} />
        <div>
            <h3 class="font-bold text-lg text-custom-charcoal">Email</h3>
            <p class="text-custom-slate-gray">{contactDetails.email}</p>
        </div>
    </div>
    <div>
        <h3 class="font-bold text-lg text-custom-charcoal pb-2">Siga-nos</h3>
        <div class="flex gap-3 items-center">
            {socialLinks.map(social => (
                <a href={social.href} target="_blank" class="w-10 h-10 bg-coral/20 rounded-full flex items-center justify-center text-coral hover:bg-coral hover:text-white transition-colors" aria-label={social.name}>
                    <FontAwesomeIcon icon={social.icon} />
                </a>
            ))}
        </div>
    </div>
</div>