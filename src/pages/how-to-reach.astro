---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactInfo from '../components/how-to-reach_page/ContactInfo.astro';
import OperatingHours from '../components/how-to-reach_page/OperatingHours.astro';
import ContactForm from '../components/how-to-reach_page/ContactForm.astro';
---
<Layout title="Contato e Endereço - Nanda Flores" description="Encontre o endereço, telefone e horário de funcionamento da Nanda Flores em Angra dos Reis. Venha nos visitar ou entre em contato para fazer seu pedido.">
    <Header />
    <main class="w-full flex flex-col items-center">
        <section class="w-full flex justify-center text-center py-8 sm:py-12 px-4">
            <div class="flex flex-col items-center gap-4">
                <p class="font-bold text-custom-slate-gray tracking-widest">CONTATO</p>
                <h1 class="font-serif text-charcoal text-4xl sm:text-5xl md:text-6xl font-bold">
                    Fale Conosco
                </h1>
                <p class="text-lg text-custom-slate-gray max-w-2xl pt-2">
                    Adoraríamos ouvir de você! Seja para fazer um pedido, tirar dúvidas ou dar sugestões.
                </p>
            </div>
        </section>

        <section class="w-full flex justify-center py-12 sm:py-16">
            <div class="container px-4">
                <div class="flex flex-col gap-12 max-w-4xl mx-auto">
                    <div class="w-full flex flex-col gap-10 bg-white p-8 sm:p-10 rounded-lg">
                        <ContactInfo />
                        <OperatingHours />
                    </div>
					
                    <div class="w-full flex flex-col gap-10 bg-white p-8 sm:p-10 rounded-lg">
                        <div>
                            <h2 class="font-serif text-3xl font-bold text-custom-charcoal pb-4">Nossa Localização</h2>
                            <div class="w-full overflow-hidden rounded-lg">
                                <iframe 
                                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3674.394611451551!2d-44.31952862386915!3d-22.93589923882799!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9c5d73de150531%3A0x94867b931e9a4f47!2sNanda%20Flores!5e0!3m2!1spt-BR!2sbr!4v1695603058986!5m2!1spt-BR!2sbr" 
                                    width="100%" 
                                    height="350" 
                                    style="border:0;" 
                                    allowfullscreen="" 
                                    loading="lazy" 
                                    referrerpolicy="no-referrer-when-downgrade">
                                </iframe>
                            </div>
                        </div>
                        <div>
                            <h2 class="font-serif text-3xl font-bold text-custom-charcoal pb-4">Envie uma Mensagem</h2>
                            <ContactForm />
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>
    <Footer />
</Layout>